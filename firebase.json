{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "host": "127.0.0.1",
      "port": 5002
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4420
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4510
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 4020
    }
  },
  "hosting": [
    {
      "target": "prod",
      "public": "frontend/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "/",
          "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
        },
        {
          "source": "/*.html",
          "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
        },
        {
          "source": "/assets/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        },
        {
          "source": "/favicon/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        },
        {
          "source": "/resume.pdf",
          "headers": [{ "key": "Cache-Control", "value": "public, max-age=86400" }]
        },
        {
          "source": "/robots.txt",
          "headers": [
            { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
            { "key": "Cache-Control", "value": "public, max-age=3600" }
          ]
        },
        {
          "source": "/sitemap.xml",
          "headers": [
            { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
            { "key": "Cache-Control", "value": "public, max-age=3600" }
          ]
        }
      ],
      "redirects": [
        {
          "source": "/resume",
          "destination": "/resume.pdf",
          "type": 302
        },
        {
          "source": "/resume/**",
          "destination": "/resume.pdf",
          "type": 302
        }
      ],
      "rewrites": [
        {
          "source": "/robots.txt",
          "destination": "/robots.txt"
        },
        {
          "source": "/sitemap.xml",
          "destination": "/sitemap.xml"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": [
    {
      "source": "firebase/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}
