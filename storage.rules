rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /Scrapbook/{entryId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // New canonical location for project images (Scrapbook remains archival).
    match /Projects/{entryId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
